ul.breadcrumb

	<% if(database) { %>
	li
		a(href='#').home #{__('breadcrumb.home')}
		span.divider /

		<% if(collection) { %>
		li
			a(href='#').database <%- database %>
			span.divider /

			<% if(document) { %>
			li
				a(href='#').collection <%- collection %>
				span.divider /

			li.active
				<%- document %>

			<% } else { %>
			li.active
				<%- collection %>
			<% } %>

		<% } else { %>
		li.active
			<%- database %>
		<% } %>

	<% } else { %>
	li.active #{__('breadcrumb.home')}
	<% } %>
